<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22.0.1" fx:controller="application.PatientController">
    <Label fx:id="welcomeLabel" layoutX="50" layoutY="50"/>
    <TextField fx:id="nameTextField" promptText="Enter your name" layoutX="200" layoutY="50"/>
    <Button text="View Profile" layoutX="50" layoutY="100" onAction="#handleViewProfile"/>
    <Button text="Logout" layoutX="350" layoutY="100" onAction="#handleLogout"/>
</AnchorPane>
